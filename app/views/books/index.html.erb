<%= flash[:notice] %>

<h3>Books</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |post| %>
<tr>
<td>
<%= post.title %>
</td>
<td>
<%= post.body %>
</td>
<td>
<%= link_to "show", book_path(post.id) %>
